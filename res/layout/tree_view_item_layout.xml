<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:padding="5dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left" >

        <ImageView
            android:id="@+id/tree_iv_goal_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:src="@drawable/tree_view_icon_and" />

        <TextView
            android:id="@+id/tree_tv_goal_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/tree_iv_goal_icon"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="goal name"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tree_tv_goal_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/tree_tv_goal_name"
            android:background="@drawable/text_view_border"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:singleLine="true"
            android:text="initial"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#123456" />
    </RelativeLayout>

    <Button
        android:id="@+id/tree_bt_goal_end"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@drawable/btn_style_alert_dialog_button"
        android:text="end" />

</FrameLayout>