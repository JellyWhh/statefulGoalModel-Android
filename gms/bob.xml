<?xml version="1.0" encoding="UTF-8"?>
<GoalModel name="bob" description="This is a goal model. Its name is bob. 这个任务是要别人委托过来，然后本地帮忙完成的 ">

	<ElementMachine id="0" type="GoalMachine" name="bob"
		level="0" description="bob">
		<decomposition>1</decomposition>
		<schedulerMethod>-1</schedulerMethod>
		<priorityLevel>1</priorityLevel>
		<needDelegate>false</needDelegate>
	</ElementMachine>

	<ElementMachine id="1" type="TaskMachine" name="bobChild_1"
		level="1" description="bob child 1">
		<parentGoal>bob</parentGoal>
		<priorityLevel>1</priorityLevel>
		<needPeopleInteraction>false</needPeopleInteraction>
		<executingRequestedServiceName>service.intentservice.setcityname</executingRequestedServiceName>
		<Condition type="CONTEXT" valueType="Int" leftValueDes="Temperature" operator="BIGGERTHAN" rightValue = "0">
		</Condition>
	</ElementMachine>

	<ElementMachine id="2" type="TaskMachine" name="bobChild_2"
		level="1" description="bob child 2">
		<parentGoal>bob</parentGoal>
		<priorityLevel>2</priorityLevel>
		<needPeopleInteraction>true</needPeopleInteraction>
		<waitingTimeLimit>5</waitingTimeLimit>
		<Condition type="PRE" valueType="Int" leftValueDes="Temperature" operator="SMALLERTHAN" rightValue = "0">
		    <!-- 只有pre condition需要设置是否能修复 -->
		    <canRepairing>false</canRepairing>
		</Condition>
	</ElementMachine>

	<ElementMachine id="3" type="TaskMachine" name="bobChild_3"
		level="1" description="bob child 3">
		<parentGoal>bob</parentGoal>
		<priorityLevel>3</priorityLevel>
		<needPeopleInteraction>false</needPeopleInteraction>
		<executingRequestedServiceName>service.intentservice.weather</executingRequestedServiceName>
		<Condition type="POST" valueType="Int" leftValueDes="Temperature" operator="SMALLERTHAN" rightValue = "0">
		</Condition>
	</ElementMachine>
	
	<RequestData name="cityName" from="DELEGATEIN" to="bobChild_3" contentType="String"></RequestData>
	<RequestData name="cityName" from="bobChild_1" to="DELEGATEOUT" contentType="String"></RequestData>

</GoalModel>