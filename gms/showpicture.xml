<?xml version="1.0" encoding="UTF-8"?>
<GoalModel name="showPicture" description="This is a goal model. Its name is showPicture. 这个goal model用来测试展示照片，接收的照片是别人委托过来的">
	
	<ElementMachine id="0" type="GoalMachine" name="showPicture"
		level="0" description="show picture">
		<decomposition>0</decomposition>
		<schedulerMethod>1</schedulerMethod>
		<needDelegate>false</needDelegate>
	</ElementMachine>
	
	<ElementMachine id="1" type="TaskMachine" name="showImage"
		level="1" description="show image">
		<parentGoal>showPicture</parentGoal>
		<priorityLevel>1</priorityLevel>
		<needPeopleInteraction>false</needPeopleInteraction>
		<!-- executingRequestedServiceName的格式必须是 AndroidManifest.xml中service标签中action name-->
		<executingRequestedServiceName>service.intentservice.showcontent</executingRequestedServiceName>
	</ElementMachine>
	
	<RequestData name="image" from="DELEGATEIN" to="showImage" contentType="Image"></RequestData>

</GoalModel>