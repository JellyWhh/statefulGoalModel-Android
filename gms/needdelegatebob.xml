<?xml version="1.0" encoding="UTF-8"?>
<GoalModel name="delegateBob" description="This is a goal model. Its name is delegateBob. 这个goal model需要把bob委托出去">

	<ElementMachine id="0" type="GoalMachine" name="delegateBob"
		level="0" description="my goal">
		<decomposition>0</decomposition>
		<schedulerMethod>1</schedulerMethod>
		<needDelegate>false</needDelegate>
	</ElementMachine>

	<ElementMachine id="1" type="GoalMachine" name="alice"
		level="1" description="alice">
		<parentGoal>delegateBob</parentGoal>
		<decomposition>0</decomposition>
		<schedulerMethod>0</schedulerMethod>
		<priorityLevel>1</priorityLevel>
		<needDelegate>false</needDelegate>
	</ElementMachine>

	<ElementMachine id="2" type="TaskMachine" name="aliceChild_1"
		level="2" description="alice child 1">
		<parentGoal>alice</parentGoal>
		<priorityLevel>1</priorityLevel>
		<needPeopleInteraction>false</needPeopleInteraction>
		<!-- executingRequestedServiceName的格式必须是 AndroidManifest.xml中service标签中action name-->
		<executingRequestedServiceName>service.intentservice.setcityname</executingRequestedServiceName>
		<Condition type="POST" valueType="Int" leftValueDes="Temperature" operator="BIGGERTHAN" rightValue = "0">
		</Condition>
	</ElementMachine>

	<ElementMachine id="3" type="TaskMachine" name="aliceChild_2"
		level="2" description="alice child 2">
		<parentGoal>alice</parentGoal>
		<priorityLevel>1</priorityLevel>
		<needPeopleInteraction>true</needPeopleInteraction>
	</ElementMachine>

	<ElementMachine id="4" type="GoalMachine" name="bob"
		level="1" description="bob">
		<parentGoal>delegateBob</parentGoal>
		<decomposition>1</decomposition>
		<schedulerMethod>-1</schedulerMethod>
		<priorityLevel>1</priorityLevel>
		<needDelegate>true</needDelegate>
	</ElementMachine>
	
	<ElementMachine id="5" type="GoalMachine" name="tom"
		level="1" description="tom">
		<parentGoal>delegateBob</parentGoal>
		<decomposition>1</decomposition>
		<schedulerMethod>-1</schedulerMethod>
		<priorityLevel>1</priorityLevel>
		<needDelegate>false</needDelegate>
	</ElementMachine>

	<ElementMachine id="6" type="TaskMachine" name="tomChild_1"
		level="2" description="tom child 1">
		<parentGoal>tom</parentGoal>
		<priorityLevel>1</priorityLevel>
		<needPeopleInteraction>false</needPeopleInteraction>
		<executingRequestedServiceName>service.intentservice.weather</executingRequestedServiceName>
	</ElementMachine>
	
	<RequestData name="cityName" from="aliceChild_1" to="bob" contentType="Text"></RequestData>
	<RequestData name="cityName2" from="DELEGATERETURN" to="tomChild_1" contentType="Text"></RequestData>

</GoalModel>