<?xml version="1.0" encoding="UTF-8"?>
<GoalModel name="test" description="This is a goal model. Its name is test 这个goal model用来测试各种服务">

	<ElementMachine id="0" type="GoalMachine" name="test"
		level="0" description="test">
		<decomposition>0</decomposition>
		<schedulerMethod>1</schedulerMethod>
		<needDelegate>false</needDelegate>
	</ElementMachine>

	
	<ElementMachine id="1" type="TaskMachine" name="readImage"
		level="1" description="read image">
		<parentGoal>test</parentGoal>
		<priorityLevel>1</priorityLevel>
		<needPeopleInteraction>false</needPeopleInteraction>
		<!-- executingRequestedServiceName的格式必须是 AndroidManifest.xml中service标签中action name-->
		<executingRequestedServiceName>service.intentservice.readimage</executingRequestedServiceName>
	</ElementMachine>
	
	<ElementMachine id="2" type="TaskMachine" name="showImage"
		level="1" description="show image">
		<parentGoal>test</parentGoal>
		<priorityLevel>1</priorityLevel>
		<needPeopleInteraction>false</needPeopleInteraction>
		<!-- executingRequestedServiceName的格式必须是 AndroidManifest.xml中service标签中action name-->
		<executingRequestedServiceName>service.intentservice.showcontent</executingRequestedServiceName>
	</ElementMachine>
	
	<RequestData name="image" from="readImage" to="showImage" contentType="Image"></RequestData>

</GoalModel>